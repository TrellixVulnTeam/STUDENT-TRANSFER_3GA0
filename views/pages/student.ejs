<div class="container mt-5">
  <div class="row tm-content-row">
    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
      <div class="tm-bg-primary-dark tm-block tm-block-products">
        <div class="tm-product-table-container">
          <table class="table table-hover tm-table-small tm-product-table" id="respTab">
            <thead>
              <tr>
                
                <th>student id</th>
                <th>First name</th>
                <th>Sir name</th>
                <th>parent first name</th>
                <th>parent second name</th>
                <th>school name</th>
                <th>school id</th>
                <th>principal name</th>
                <th>student location</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% rows.forEach((row)=>{%>
              <tr>
                <td><%= row.id %></td>
                <td><%= row.first %></td>
                <td><%= row.sir %></td>
                <td><%= row.parent_name %></td>
                <td><%= row.parent_sname %></td>
                <td><%= row.school %></td>
                <td><%= row.sid %></td>
                <td><%= row.principal %></td>
                <td><%= row.student_location %></td>
                <td><%= row.school_location %></td>
                <td><%= row.county %></td>
                <td><%= row.district %></td>
                <td><%= row.dob %></td>
              </tr>
              <%}) %>
            </tbody>
          </table>
        </div>
