                        <table class="table">
                            <thead>
                                <tr>
                                  
                                  <th>school id</th>

                                  <th>School name</th>
                                  <th>principal</th>
                                  <th>doc</th>
                                  <th>county</th>
                                  <th>district</th>
                                  <th>village</th>
                                  <th>map</th>
                                  <th>doe</th>
                                  <th>pdj</th>
                                  <th>remarks</th>
                                  <th>&nbsp;</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% schools.forEach((school)=>{%>
                                <tr>
                                  <td><%= school.sid %></td>
                                  <td><%= school.name %></td>
                                  <td><%= school.principal %></td>
                                  <td><%= school.doc %></td>
                                  <td><%= school.county %></td>
                                  <td><%= school.district %></td>
                                  <td><%= school.village %></td>
                                  <td><%= school.map %></td>
                                  <td><%= school.doe %></td>
                                  <td><%= school.pdj %></td>
                                  <td><%= school.remarks %></td>
                                
                                </tr>
                                <%}) %>
